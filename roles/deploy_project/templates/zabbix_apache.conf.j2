<VirtualHost *:443>
    ServerAdmin admin@yourdomain.com
    DocumentRoot /usr/share/zabbix-server-mysql

    Alias /zabbix /usr/share/zabbix-server-mysql

    <Directory "/usr/share/zabbix-server-mysql">
        Options FollowSymLinks
        AllowOverride None
        Require all granted
    </Directory>

    ErrorLog ${APACHE_LOG_DIR}/zabbix_error.log
    CustomLog ${APACHE_LOG_DIR}/zabbix_access.log combined
</VirtualHost>
